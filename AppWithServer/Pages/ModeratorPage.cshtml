@page
@model Pages.ModeratorPageModel
@{
    ViewData["Title"] = "Панель модератора";
}
<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f9;
        color: #333;
        margin: 20px;
    }

    h2 {
        color: #333;
        text-align: center;
    }

    h3 {
        color: #333;
        margin-top: 30px;
        border-bottom: 2px solid #ddd;
        padding-bottom: 5px;
    }

    table {
        width: 100%;
        margin-bottom: 20px;
        border-collapse: collapse;
    }

    th, td {
        padding: 10px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }

    th {
        background-color: #f1f1f1;
        color: #555;
    }

    tr:hover {
        background-color: #f9f9f9;
    }

    button {
        background-color: #007bff;
        color: white;
        border: none;
        padding: 8px 15px;
        font-size: 14px;
        cursor: pointer;
        margin-top: 5px;
    }

        button:hover {
            background-color: #0056b3;
        }

    .delete-button {
        background-color: #dc3545;
        padding: 6px 12px;
        font-size: 14px;
    }

        .delete-button:hover {
            background-color: #c82333;
        }
</style>

<h2>Панель модератора</h2>

<h3>Пользователи</h3>
<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Логин</th>
            <th>Пароль</th>
            <th>Роль</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users)
        {
            <tr>
                <td>@user.IdUser</td>
                <td>@user.Login</td>
                <td>@user.Password</td>
                <td>@user.Role</td>
                <td>
                    <button onclick="document.getElementById('editUserForm-@user.IdUser').style.display='block'">Редактировать</button>

                    <form method="post" asp-page-handler="DeleteUser" asp-route-id="@user.IdUser">
                        <button type="submit" class="delete-button">Удалить</button>
                    </form>

                    <!-- Форма редактирования пользователя -->
                    <div id="editUserForm-@user.IdUser" class="form-container">
                        <form method="post" asp-page-handler="EditUser" asp-route-id="@user.IdUser">
                            <input type="text" name="login" value="@user.Login" required />
                            <input type="text" name="password" value="@user.Password" required />
                            <input type="number" name="role" value="@user.Role" required />
                            <button type="submit">Сохранить изменения</button>
                        </form>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

<h3>Заказы</h3>
<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Пользователь</th>
            <th>Товар</th>
            <th>Количество</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model.Orders)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.User.Login</td>
                <td>@order.Good.Name</td>
                <td>@order.Count</td>
                <td>
                    <button onclick="document.getElementById('editOrderForm-@order.Id').style.display='block'">Редактировать</button>

                    <form method="post" asp-page-handler="DeleteOrder" asp-route-id="@order.Id">
                        <button type="submit" class="delete-button">Удалить</button>
                    </form>

                    <!-- Форма редактирования заказа -->
                    <div id="editOrderForm-@order.Id" class="form-container">
                        <form method="post" asp-page-handler="EditOrder" asp-route-id="@order.Id">
                            <input type="number" name="count" value="@order.Count" required />
                            <button type="submit">Сохранить изменения</button>
                        </form>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

<h3>Товары</h3>
<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Название</th>
            <th>Описание</th>
            <th>В наличии</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var goods in Model.Goods)
        {
            <tr>
                <td>@goods.Id</td>
                <td>@goods.Name</td>
                <td>@goods.Discription</td>
                <td>@goods.InStock</td>
                <td>
                    <button onclick="document.getElementById('editGoodsForm-@goods.Id').style.display='block'">Редактировать</button>

                    <form method="post" asp-page-handler="DeleteGoods" asp-route-id="@goods.Id">
                        <button type="submit" class="delete-button">Удалить</button>
                    </form>

                    <!-- Форма редактирования товара -->
                    <div id="editGoodsForm-@goods.Id" class="form-container">
                        <form method="post" asp-page-handler="EditGoods" asp-route-id="@goods.Id">
                            <input type="text" name="name" value="@goods.Name" required />
                            <input type="text" name="description" value="@goods.Discription" />
                            <input type="checkbox" name="inStock" @(goods.InStock ? "checked" : "true") />
                            <button type="submit">Сохранить изменения</button>
                        </form>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>